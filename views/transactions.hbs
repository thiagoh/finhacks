<div ng-controller="TransactionsController">

	<div class="page-header row">
		<div class="col-md-6">
	  	<h3>Transactions</h3>
	  </div>
	  <div class="col-md-6">
	  	<h3 class="pull-right">
	  		<button type="button" class="btn btn-success btn-sm"
	  			ng-click="showNewAssetModal()"><i class="fa fa-plus fa-md"></i> new asset</button>
	  	</h3>
	  </div>
	</div>

	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>Transaction #</th>
				<th>Date</th>
				<th>Amount</th>
				<!-- <th style="min-width: 120px;">Category</th> -->
				<!-- <th>Actions</th> -->
			</tr>
		</thead>
		<tr ng-repeat="(key, item) in data.transactions">
			<td ng-bind="item.description">
			</td>
			<td>
				<div ng-bind="item.date | date : 'mm/dd/yyyy hh:m:ss'"></div>
			</td>
			<td ng-class="{'transaction-asset': item.categoryId === 1,'transaction-liability': item.categoryId !== 1}">
				<div ng-bind="item.amount | number : 2"></div>
			</td>
			<!--
			<td>
				<div ng-show="!item.__edit" ng-bind="data.categories[item.categoryId] || '-'">
				</div>
				<div ng-show="item.__edit === true">
					<select name="category" ng-model="item.categoryId">
						<option value="1">Salary</option>
						<option value="2">Investments</option>
						<option value="3">Expenditures</option>
					</select>
				</div>
			</td>
			<td>
				<div ng-show="!item.__edit">
					<button type="button" class="btn" ng-click="edit(item)">
						<i class="fa i-btn fa-edit fa-lg point"></i>
					</button>
				</div>
				<div ng-show="item.__edit === true">
					<button type="button" class="btn" ng-click="save(item)">
						<i class="fa i-btn fa-save fa-lg point"></i>
					</button>
				</div>
			</td>
			-->
		</tr>
	</table>

	<div class="modal fade" tabindex="-1" role="dialog" id="assetModal">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">New Asset</h4>
	      </div>
	      <div class="modal-body">

	      	<div class="container-fluid">
	      		<form class="form-horizontal">
							<input type="hidden" name="_csrf" value={{_csrf}} />
						  <div class="form-group">
						    <label for="assetName">Name</label>
						    <input type="text" ng-model="data.__newAsset.assetName" class="form-control" id="assetName" placeholder="name">
						  </div>
						  <div class="form-group">
						    <label for="initialValue">Value</label>
						    <input type="text" ng-model="data.__newAsset.initialValue" class="form-control" id="initialValue" placeholder="value">
						  </div>
						  <div class="form-group">
						    <label for="interestRate">Interest Rate</label>
						    <input type="text" ng-model="data.__newAsset.interestRate" class="form-control" id="interestRate" placeholder="interest rate">
						  </div>
						  <div class="form-group">
						    <label for="startDate">Buy date</label>
						    <input type="text" ng-model="data.__newAsset.startDate" class="form-control" id="startDate" placeholder="01/01/1970">
						  </div>
						  <div class="form-group">
						    <label for="endDate">Maturity date</label>
						    <input type="text" ng-model="data.__newAsset.endDate" class="form-control" id="endDate" placeholder="01/01/2030">
						  </div>
						</form>
	      	</div>
	      	
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <button type="button" class="btn btn-primary" ng-click="saveNewAsset()">Save changes</button>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
</div>